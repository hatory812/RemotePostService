<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDashborad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#009246"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageView_latest_post_in_dashboard"
                android:layout_width="match_parent"
                android:layout_height="800px"
                android:layout_marginTop="100px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                app:srcCompat="@drawable/true_mouth"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView_latest_post_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="test"/>

            </LinearLayout>

            <Button
                android:id="@+id/button_to_show_all_post_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:layout_marginLeft="200px"
                android:layout_marginRight="200px"
                android:backgroundTint="#000000"
                android:text="過去のポストを見る"/>

            <Button
                android:id="@+id/button_to_update_post_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:layout_marginLeft="200px"
                android:layout_marginRight="200px"
                android:backgroundTint="#000000"
                android:text="最新のポストを撮り直す"/>

<!--            <Button-->
<!--                android:id="@+id/button_to_set_volume_activity"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="25px"-->
<!--                android:layout_marginLeft="200px"-->
<!--                android:layout_marginRight="200px"-->
<!--                android:backgroundTint="#000000"-->
<!--                android:text="音量を調整する"/>-->

            <Button
                android:id="@+id/button_to_repelling_crows_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:layout_marginLeft="200px"
                android:layout_marginRight="200px"
                android:backgroundTint="#000000"
                android:text="カラスを撃退する"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ce2b37"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>